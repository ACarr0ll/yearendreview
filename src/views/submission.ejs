<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submission Form</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/_navbar', { isLoggedIn: isLoggedIn }) %>
    <header>
        <h1>Submission Form</h1>
    </header>
    <main>
        <form action="/submission" method="POST">
            <div class="date-time-group">
                <div>
                    <label for="date">Date:</label>
                    <input type="date" id="date" name="date" value="<%= currentDate %>" required>
                </div>
                <div>
                    <label for="time">Time:</label>
                    <input type="time" id="time" name="time" value="<%= currentTime %>" required>
                </div>
            </div>
            <div>
                <label for="type">Type:</label>
                <select id="type" name="type" required onchange="toggleAdditionalFields()">
                    <option value="">Select a type...</option>
                    <option value="Case">Case</option>
                    <option value="Assistance">Assistance</option>
                    <option value="Project">Project</option>
                </select>
            </div>
            <div id="caseNumberField" style="display: none;">
                <label for="caseNumber">Case Number: *</label>
                <input type="text" id="caseNumber" name="caseNumber" pattern="[0-9]+" title="Please enter a valid case number" required>
            </div>
            <div id="analystField" style="display: none;">
                <label for="analyst">Analyst: *</label>
                <input type="text" id="analyst" name="analyst" required>
            </div>
            <div>
                <label for="shortDescription">Short Description:</label>
                <input type="text" id="shortDescription" name="shortDescription" required>
            </div>
            <div>
                <label for="additionalInfo">Additional Information:</label>
                <textarea id="additionalInfo" name="additionalInfo" rows="4" required></textarea>
            </div>
            <div>
                <label for="timeTaken">Time Taken (minutes):</label>
                <input type="number" 
                       id="timeTaken" 
                       name="timeTaken" 
                       min="0" 
                       required>
            </div>
            <div class="button-row">
                <button type="submit">Submit</button>
                <button type="button" class="cancel-button" onclick="window.location.href='/'">Cancel</button>
            </div>
        </form>
    </main>
    <footer>
        <p>&copy; 2023 My Node.js Website</p>
    </footer>
    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            // Set current date and time with timezone adjustment
            const now = new Date();
            const timezoneOffset = now.getTimezoneOffset();
            now.setMinutes(now.getMinutes() - timezoneOffset); // Subtract offset to get local time
            
            // Format date and time
            const year = now.getFullYear();
            const month = String(now.getMonth() + 1).padStart(2, '0');
            const day = String(now.getDate()).padStart(2, '0');
            const hours = String(now.getHours()).padStart(2, '0');
            const minutes = String(now.getMinutes()).padStart(2, '0');
            
            // Set values
            document.getElementById('date').value = `${year}-${month}-${day}`;
            document.getElementById('time').value = `${hours}:${minutes}`;
        });

        function toggleAdditionalFields() {
            const typeSelect = document.getElementById('type');
            const caseNumberField = document.getElementById('caseNumberField');
            const analystField = document.getElementById('analystField');
            const caseNumberInput = document.getElementById('caseNumber');
            const analystInput = document.getElementById('analyst');
            
            if (typeSelect.value === 'Case') {
                caseNumberField.style.display = 'block';
                analystField.style.display = 'none';
                caseNumberInput.required = true;
                analystInput.required = false;
                analystInput.value = '';
            } else if (typeSelect.value === 'Assistance') {
                caseNumberField.style.display = 'none';
                analystField.style.display = 'block';
                caseNumberInput.required = false;
                analystInput.required = true;
                caseNumberInput.value = '';
            } else {
                caseNumberField.style.display = 'none';
                analystField.style.display = 'none';
                caseNumberInput.required = false;
                analystInput.required = false;
                caseNumberInput.value = '';
                analystInput.value = '';
            }
        }
    </script>
</body>
</html>