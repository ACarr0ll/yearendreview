<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Node.js Website</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/_navbar') %>
    <header>
        <h1>Welcome to My Node.js Website</h1>
    </header>
    <main>
        <section>
            <h2>About This Website</h2>
            <p>This website is designed to help you track projects and tasks completed throughout the year. Using AI, it will generate a comprehensive performance review based on your tracked activities.</p>
        </section>
        <section>
            <h2>Features</h2>
            <div class="feature-box">
                <h3>Track projects and tasks</h3>
            </div>
            <div class="feature-box">
                <h3>Generate performance reviews using AI</h3>
            </div>
            <div class="feature-box">
                <h3>View history of completed tasks</h3>
            </div>
            <div class="feature-box">
                <h3>Submit new tasks and projects</h3>
            </div>
        </section>
        <% if (!isLoggedIn) { %>
            <section>
                <h2>Get Started</h2>
                <p>To get started, <a href="/register" class="button-link">register</a> for an account or <a href="/login" class="button-link">login</a> if you already have one.</p>
            </section>
        <% } %>
    </main>
    <footer id="footer">
        <p>&copy; 2023 My Node.js Website</p>
    </footer>
    <script>
        window.addEventListener('scroll', function() {
            const footer = document.getElementById('footer');
            if ((window.innerHeight + window.scrollY) >= document.body.offsetHeight) {
                footer.style.display = 'block';
            } else {
                footer.style.display = 'none';
            }
        });

        function showNotification(message) {
            const notification = document.createElement('div');
            notification.className = 'notification';
            notification.innerText = message;
            document.body.appendChild(notification);

            setTimeout(() => {
                notification.classList.add('show');
            }, 100);

            setTimeout(() => {
                notification.classList.remove('show');
                setTimeout(() => {
                    document.body.removeChild(notification);
                }, 500);
            }, 3000);
        }

        function simulateUserSignUps() {
            const users = ['Alice', 'Bob', 'Charlie', 'Dave', 'Eve'];
            let index = 0;

            setInterval(() => {
                if (index < users.length) {
                    showNotification(`${users[index]} just signed up!`);
                    index++;
                }
            }, 5000);
        }

        simulateUserSignUps();
    </script>
</body>
</html>